<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".company_profile_edit"
    android:background="@drawable/background_img"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            android:text="Name"
            android:textColor="@android:color/background_dark"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/com_name_editTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="300dp"
            android:layout_marginLeft="15dp"
            android:paddingLeft="5dp"
            android:hint="Company name Pvt Ltd"
            android:textSize="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            android:text="Vision"
            android:textColor="@android:color/background_dark"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/com_vision_editTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="300dp"
            android:paddingLeft="5dp"
            android:layout_marginLeft="15dp"
            android:hint="Create Economic opporttunity for every member of the global work force. "
            android:textSize="15dp"/>
    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="5dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="10dp"
        android:text="Mission"
        android:textColor="@android:color/background_dark"
        android:textSize="15dp"/>

    <EditText
        android:id="@+id/com_mission_editTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="300dp"
        android:paddingLeft="5dp"
        android:hint="Create Economic opporttunity for every member of the global work force. "
        android:textSize="15dp"/>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            android:text="No of Employees"
            android:textColor="@android:color/background_dark"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/noOfEmps_editTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="50dp"
            android:paddingLeft="5dp"
            android:hint="00"
            android:layout_marginLeft="15dp"
            android:textSize="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            android:text="No of Departments"
            android:textColor="@android:color/background_dark"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/noOfDepts_editTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="50dp"
            android:paddingLeft="5dp"
            android:hint="00"
            android:textSize="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            android:text="Address"
            android:textColor="@android:color/background_dark"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/address_editTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="300dp"
            android:paddingLeft="5dp"
            android:hint="4,Sample rd.,Sri Lanka"
            android:textSize="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            android:text="Phone"
            android:textColor="@android:color/background_dark"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/phone_editTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="300dp"
            android:paddingLeft="5dp"
            android:layout_marginLeft="15dp"
            android:hint="+94 112 456 456"
            android:textSize="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            android:text="Email"
            android:textColor="@android:color/background_dark"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/email_editTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="300dp"
            android:paddingLeft="5dp"
            android:layout_marginLeft="20dp"
            android:hint="company@gmail.com"
            android:textSize="15dp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_centerInParent="true"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/btn_edit_profile_save"
            style="@style/buttons2_examine_applicants"
            android:layout_marginStart="30dp"
            android:layout_marginRight="50dp"
            android:text="Save Details"/>
    </RelativeLayout>

  </LinearLayout>